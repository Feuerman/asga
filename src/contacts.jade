include templates/head.jade
body
	.page-wrapper
		include templates/header.jade
		section.page-content
			.mobile-show
				.section.breadcrumbs
					ul
						li
							a(href="#") Главная
						li
							span Контакты
				.page-title
					h1 Контакты
			.container
				aside.left-sidebar
					.mobile-show
						button.left-menu-btn.js-toggle(data-toggle="left-menu")
							i.icon.icon__triangle--border-grey
							span Меню
					.left-menu
						.left-menu__group
							a.title(href="#") О компании
							ul
								li
									a(href="#") Цели и задачи
								li
									a(href="#") История компании
								li
									a(href="#") Завод
								li
									a(href="#") Сертификаты
								li
									a(href="#") Карьера
								li
									a(href="#") Партнеры и клиенты
								li
									a(href="#") Наши работы
						.left-menu__group
							a.title.active(href="#") Корпоративным клиентам
						.left-menu__group
							a.title(href="#") Социальная ответственность
						.left-menu__group
							a.title(href="#") Пресс-центр
							ul
								li
									a(href="#") Новости
								li
									a(href="#") Видеоархив
								li
									a(href="#") Вопрос-ответ
					.search-form
						form
							input(type="text" placeholder="Найти")
							button(type="submit")
								img.svg.svg--search(src="img/search.svg", alt="")
					.left-sidebar__product
						.products-slider__item
							.image
								img(src="img/product -1.jpg", alt="")
							.desc
								.desc__name Газовая колонка NEVA-4511
								.price
									span.price__old 9500
									span 9220 руб.
							a.link.button(href="#") Подробнее
						a.link(href="#") Открыть каталог
				section.page-content__main
					.mobile-hidden
						section.breadcrumbs
							ul
								li
									a(href="#") Главная
								li
									span Контакты
						.page-title
							h1 Контакты
					section.contacts-page
						.contacts-page__info
							.col
								.col__title
									span E-mail
								.col__value
									a(href="#") info@baltgaz.ru
							.col
								.col__title
									span Телефон
									span.grey (с 8.30 до 18.00)
								.col__value
									span 8-800-555-40-35
							.col
								button(data-fancybox data-src="#form-contacts") Написать письмо
						.contacts-page__map
							.title Наши дистрибьюторы и сервисные центры
							.panel
								.panel__citylist
									button
										span Выбрать регион
										i.icon.icon__arrow--dark-down
								.news-filter
									.news-filter__item
										a.active(href="#") Все
										a(href="#") Дистрибьюторы
										a(href="#") Сервисные центры
							.map
								#contacts-map
		include templates/footer.jade
include templates/modal/index.jade